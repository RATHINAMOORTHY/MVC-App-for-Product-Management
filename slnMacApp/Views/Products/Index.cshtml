@model List<slnMacApp.Models.Product>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>Products</h2>
<br />
<a href="/Products/Create">Create Product</a>
<br /><br />
<form class="form-inline">
    <label for="Search">Search</label>
    <input type="search" class="form-control" id="Search" name="Search" placeholder=@ViewBag.Search >
    <button type="submit" class="btn btn-primary">Go</button>
</form>
<table class="table">
    <tr>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Date of Purchase</th>
        <th>Availability Status</th>
        <th>CategoryID</th>
        <th>BrandID</th>
        <th>Active</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductID</td>
            <td>@item.ProductName</td>
            <td>@item.Price.Value.ToString("C")</td>
            <td>@item.DateOfPurchase.Value.ToString("d/M/yyyy")</td>
            <td>@item.AvailabilityStatus</td>
            <td>@item.CategoryID</td>
            <td>@item.BrandID</td>
            <td>@item.Active</td>
            <td>
                <a href="/products/details/@item.ProductID">Details</a>
            </td>
        </tr>
    }
</table>

